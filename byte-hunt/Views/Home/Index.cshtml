@{
    ViewData["Title"] = "Home Page";
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/home_style.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

}

<div class="container-fluid p-0">
    <!-- Hero Section -->
    <div class="hero-section position-relative">
        <img src="~/images/background_byte_hunt.svg" class="img-fluid w-100 hero-img" alt="Banner">
        <div class="overlay-text position-absolute top-50 start-50 translate-middle text-white text-center px-4 py-3">
            <h1 class="display-4 fw-bold">Bem-vindo à</h1>
            <h1 class="display-4 fw-bold">Byte Hunt</h1>
            <p class="lead mb-0">Explora, contribui e compara conteúdos da comunidade</p>
        </div>
    </div>
    
    <div class="text-center my-4">
        <a class="btn btn-preto btn-lg px-4 rounded-pill shadow-sm" href="#funcionalidades">
        Explorar <i class="bi bi-arrow-down"></i>
        </a>
    </div>

    <!-- Funcionalidades -->
    <div id="funcionalidades" class="container my-5">
        <div class="text-center mb-4">
            <h2 class="fw-bold">Funcionalidades Principais</h2>
            <p class="text-muted">Tudo o que podes fazer na Byte Hunt</p>
        </div>

        <div class="d-flex justify-content-center gap-5 flex-wrap text-center" style="max-width: 900px; margin: 0 auto;">
            <div class="p-5 border rounded shadow" style="min-width: 300px; max-width: 350px; background: #fff; box-shadow: 0 8px 20px rgba(0,0,0,0.1);">
                <i class="bi bi-box-seam display-3 text-primary"></i>
                <h3 class="mt-4 fw-bold" style="font-size: 1.8rem;">Catálogo de Itens</h3>
                <p style="font-size: 1.1rem; color: #555;">Consulta e descobre diversos itens tecnológicos.</p>
                <a class="btn btn-outline-primary btn-lg px-5" asp-controller="Itens" asp-action="Index" style="transition: background-color 0.3s, color 0.3s;">
                    Ver Itens
                </a>
            </div>
            <div class="p-5 border rounded shadow" style="min-width: 300px; max-width: 350px; background: #fff; box-shadow: 0 8px 20px rgba(0,0,0,0.1);">
                <i class="bi bi-diagram-3-fill display-3 text-success"></i>
                <h3 class="mt-4 fw-bold" style="font-size: 1.8rem;">Comparações</h3>
                <p style="font-size: 1.1rem; color: #555;">Compara facilmente diferentes produtos lado a lado.</p>
                <a class="btn btn-outline-success btn-lg px-5" asp-controller="Comparacao" asp-action="Index" style="transition: background-color 0.3s, color 0.3s;">
                    Comparar
                </a>
            </div>
        </div>
    </div>
</div>

