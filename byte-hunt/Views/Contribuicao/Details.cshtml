@model byte_hunt.Models.Contribuicao

@{
    ViewData["Title"] = "Detalhes da Contribuição";
    <link rel="stylesheet" href="~/css/contribuicoes_create.css" asp-append-version="true" />
}

<div class="form-container-wide">
    <h1 class="text-center mb-4">Detalhes da Contribuição</h1>

    <dl class="row">
        <dt class="col-sm-3">Detalhes</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.DetalhesContribuicao)</dd>

        <dt class="col-sm-3">Data da Contribuição</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.DataContribuicao)</dd>

        <dt class="col-sm-3">Utilizador</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Utilizador.Nome)</dd>

        <dt class="col-sm-3">Estado Atual</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>

        @if (Model.Status != "Approved" && Model.Status != "Rejected")
        {
            <form asp-action="UpdateStatus" method="post" class="w-100 mt-4">
                @Html.AntiForgeryToken()
                <input type="hidden" name="Id" value="@Model.Id" />

                <div class="form-group mb-3">
                    <label for="Responsavel">Selecionar Responsável:</label>
                    <select name="Responsavel" class="form-control" asp-items="ViewBag.Utilizadores" required>
                        <option disabled selected>-- Escolher Responsável --</option>
                    </select>
                </div>

                <div class="form-group text-center d-flex justify-content-center gap-3">
                    <button name="status" value="Approved" class="btn btn-success px-4">Aprovar</button>
                    <button name="status" value="Rejected" class="btn btn-danger px-4">Rejeitar</button>
                </div>
            </form>
        }
        else
        {
            <dt class="col-sm-3">Data da Revisão</dt>
            <dd class="col-sm-9">@Model.DataReview?.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-3">Revisor</dt>
            <dd class="col-sm-9">
                @(Model.Responsavel != null && !string.IsNullOrWhiteSpace(Model.Responsavel.Nome)
                    ? Model.Responsavel.Nome
                    : "—")
            </dd>
        }
    </dl>

    <a asp-action="Index" class="back-link d-block mt-4">&larr; Voltar à lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
