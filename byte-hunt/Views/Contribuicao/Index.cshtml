@model IEnumerable<byte_hunt.Models.Contribuicao>

@{
    ViewData["Title"] = "Contribuições";

    <link rel="stylesheet" href="~/css/contribuicao_apresentacao.css" asp-append-version="true"/>

    var utilizadores = ViewData["Utilizadores"] as List<SelectListItem>;
    var utilizadorSelecionado = (int)ViewData["UtilizadorSelecionado"];
    var currentSearch = "";

    var currentPage = (int)ViewData["CurrentPage"];
    var totalPages = (int)ViewData["TotalPages"];
    var utilizadorId = (int)ViewData["UtilizadorSelecionado"];
}



<div class="contribuicao-fundo"></div>

<div class="container contribuicao-conteudo">
    <h2 class="mb-4">Contribuições</h2>

    <div class="d-flex flex-column align-items-start mb-3" style="width: auto; margin: 0; padding: 0;">
        <div class="dropdown" style="width: auto;">
            <button class="btn btn-outline-secondary dropdown-toggle rounded shadow-sm text-truncate"
                    type="button" id="dropdownUtilizadores" data-bs-toggle="dropdown" aria-expanded="false"
                    style="width: auto; padding: 0.375rem 0.75rem; font-size: 1rem; height: 38px;">
                @(utilizadorSelecionado == 0 ? "Todos Utilizadores" : utilizadores.FirstOrDefault(u => int.Parse(u.Value) == utilizadorSelecionado)?.Text)
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownUtilizadores" style="width: auto; font-size: 1rem;">
                @foreach (var utilizador in utilizadores)
                {
                    var userId = int.Parse(utilizador.Value);
                    <li>
                        <a class="dropdown-item @(userId == utilizadorSelecionado ? "active" : "")"
                           href="@Url.Action("Index", new { utilizadorId = userId })"
                           style="padding: 0.375rem 0.75rem;">
                            @utilizador.Text
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>

    <a class="btn btn-success mb-3" asp-action="Create">+ Nova Contribuição</a>


    <table class="table table-hover table-striped contribuicao-tabela">
        <thead>
        <tr>
            <th>ID</th>
            <th>Contribuição</th>
            <th>Estado</th>
            <th>Data Contribuição</th>
            <th>Responsável</th>
            <th>Data de Revisão</th>
            <th>Utilizador</th>
            <th>Ações</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var contribuicao in Model)
        {
            <tr>
                <td>@contribuicao.Id</td>
                <td>
                    @{
                        var detalhes = contribuicao.DetalhesContribuicao ?? "";
                        var nome = "";
                        var prefix = "Nome:";
                        if (detalhes.Contains(prefix))
                        {
                            int start = detalhes.IndexOf(prefix) + prefix.Length;
                            int end = detalhes.IndexOf("Marca:", start);
                            if (end == -1) end = detalhes.Length;
                            nome = detalhes.Substring(start, end - start).Trim();
                        }
                    }
                    @nome
                </td>
                <td>
                    <span class="badge @(contribuicao.Status switch
                                       {
                                           "Approved" => "bg-success",
                                           "Pending" => "bg-warning text-dark",
                                           "Rejected" => "bg-danger",
                                           _ => "bg-secondary"
                                       })">@contribuicao.Status</span>
                </td>
                <td>@contribuicao.DataContribuicao.ToShortDateString()</td>
                <td>@contribuicao.Responsavel?.Nome </td>
                <td>@contribuicao.DataReview?.ToShortDateString()</td>
                <td>@contribuicao.Utilizador?.Nome</td>
                <td class="contribuicao-botoes">
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@contribuicao.Id">Ver</a>
                    @if (contribuicao.Status != "Approved" && contribuicao.Status != "Rejected")
                    {
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@contribuicao.Id">Editar</a>
                    }
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@contribuicao.Id">Remover</a>
                    <a class="btn btn-sm btn-success" asp-action="Details" asp-route-id="@contribuicao.Id">Requisitar</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
    @if (totalPages > 0)
    {
        <nav class="mt-5" aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link bg-dark text-white border-dark" asp-action="Index"
                       asp-route-page="@(currentPage - 1)" asp-route-utilizadorId="@utilizadorId" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>

                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link @(i == currentPage ? "bg-black text-white border-dark" : "bg-dark text-white border-dark")"
                           asp-action="Index"
                           asp-route-page="@i"
                           asp-route-utilizadorId="@utilizadorId">
                            @i
                        </a>
                    </li>
                }

                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link bg-dark text-white border-dark" asp-action="Index"
                       asp-route-page="@(currentPage + 1)" asp-route-utilizadorId="@utilizadorId" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    }
    else
    {
        <div class="alert alert-info text-center my-4" role="alert" style="font-size: 1.2rem;">Não existem contribuições para serem apresentadas.</div>
    }
</div>
