@model IEnumerable<byte_hunt.Models.Contribuicao>

@{
    ViewData["Title"] = "Contribuições";

<link rel="stylesheet" href="~/css/contribuicao_apresentacao.css" asp-append-version="true" />
    
    var utilizadores = ViewData["Utilizadores"] as List<SelectListItem>;
    var utilizadorSelecionado = (int)ViewData["UtilizadorSelecionado"];
    var currentSearch = ""; // pode adicionar se tiver filtro de pesquisa
}



<div class="contribuicao-fundo"></div>

<div class="container contribuicao-conteudo">
    <h2 class="mb-4">Contribuições</h2>

    <div class="d-flex flex-column align-items-start mb-3" style="width: auto; margin: 0; padding: 0;">
        <div class="dropdown" style="width: auto;">
            <button class="btn btn-outline-secondary dropdown-toggle rounded shadow-sm text-truncate"
                    type="button" id="dropdownUtilizadores" data-bs-toggle="dropdown" aria-expanded="false"
                    style="width: auto; padding: 0.375rem 0.75rem; font-size: 1rem; height: 38px;">
                @(utilizadorSelecionado == 0 ? "Todos Utilizadores" : utilizadores.FirstOrDefault(u => int.Parse(u.Value) == utilizadorSelecionado)?.Text)
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownUtilizadores" style="width: auto; font-size: 1rem;">
                @foreach (var utilizador in utilizadores)
                {
                    var userId = int.Parse(utilizador.Value);
                    <li>
                        <a class="dropdown-item @(userId == utilizadorSelecionado ? "active" : "")"
                           href="@Url.Action("Index", new { utilizadorId = userId })"
                           style="padding: 0.375rem 0.75rem;">
                            @utilizador.Text
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>

    <a class="btn btn-success mb-3" asp-action="Create">+ Nova Contribuição</a>


    <table class="table table-hover table-striped contribuicao-tabela">
        <thead>
            <tr>
                <th>ID</th>
                <th>Detalhes</th>
                <th>Estado</th>
                <th>Data</th>
                <th>Responsável</th>
                <th>Utilizador</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.DetalhesContribuicao</td>
                    <td>
                        <span class="badge @(item.Status switch {
                            "Approved" => "bg-success",
                            "Pending" => "bg-warning text-dark",
                            "Rejected" => "bg-danger",
                            _ => "bg-secondary"
                        })">@item.Status</span>
                    </td>
                    <td>@item.DataContribuicao.ToShortDateString()</td>
                    <td>@item.Responsavel?.Nome </td>
                    <td>@item.Utilizador?.Nome</td>
                    <td class="contribuicao-botoes">
                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">Ver</a>
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Remover</a>
                        <a class="btn btn-sm btn-success" asp-action="Details" asp-route-id="@item.Id">Requisitar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
