@model IEnumerable<byte_hunt.Models.Item>

@{
    ViewData["Title"] = "Produtos";
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/itens_style.css" asp-append-version="true"/>
    
    int currentPage = ViewData["CurrentPage"] != null ? (int)ViewData["CurrentPage"] : 1;
    int pageSize = ViewData["PageSize"] != null ? (int)ViewData["PageSize"] : 6;
    int totalItems = ViewData["TotalItems"] != null ? (int)ViewData["TotalItems"] : 0;
    int totalPages = (int)Math.Ceiling((double)totalItems / pageSize);
    
}

<div class="container py-5">
    <div class="overlay-container">
        <h1 class="text-center mb-4 fw-bold">Produtos</h1>
        <!--<div class="text-end mb-4">
            <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Adicionar Novo Produto 
        </a>
    </div>-->

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(item.FotoItem))
                        {
                            <img src="~/images/@item.FotoItem" class="card-img-top" alt="@item.Nome" style="object-fit: cover; height: 200px;">
                        }
                        else
                        {
                            <div class="bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                                <span class="text-white">Sem imagem</span>
                            </div>
                        }

                        <div class="card-body">
                            <h5 class="card-title">@item.Nome</h5>
                            <p class="fw-bold mb-1">@item.Preco?.ToString("C")</p>
                            <span class="badge bg-primary">@item.Categoria?.Nome</span>
                        </div>
                        <div class="card-footer d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-dark btn-md " title="Ver detalhes">
                                <i class="bi bi-eye fs-9"></i>
                            </a>

                            <!--  
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">Editar</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Eliminar</a>
                            -->
                        </div>
                    </div>
                </div>
            }
        </div>
        <nav class="mt-5" aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link bg-dark text-white border-dark" asp-action="Index" asp-route-pageNumber="@(currentPage - 1)" asp-route-pageSize="@pageSize" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>

                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link @(i == currentPage ? "bg-black text-white border-dark" : "bg-dark text-white border-dark")"
                        asp-action="Index"
                        asp-route-pageNumber="@i"
                        asp-route-pageSize="@pageSize">
                            @i
                        </a>
                    </li>
                }

                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link bg-dark text-white border-dark" asp-action="Index" asp-route-pageNumber="@(currentPage + 1)" asp-route-pageSize="@pageSize" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>
