@model byte_hunt.Models.Item

@{
    ViewData["Title"] = "Eliminar Produto";

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/itens_forms_create_edit_delete.css" asp-append-version="true" />
}

<div class="background-image"></div>

<div class="container my-5 py-5">
    <div class="form-card shadow rounded p-4 mx-auto">
        <h1 class="text-center text-danger mb-4">Eliminar Produto</h1>
        <h5 class="text-center mb-4">Tens a certeza que queres eliminar o seguinte produto?</h5>

        <dl class="row mb-4">
            <dt class="col-sm-4">Nome</dt>
            <dd class="col-sm-8">@Model.Nome</dd>

            <dt class="col-sm-4">Marca</dt>
            <dd class="col-sm-8">@Model.Marca</dd>

            <dt class="col-sm-4">Preço</dt>
            <dd class="col-sm-8">@Model.Preco?.ToString("C")</dd>

            <dt class="col-sm-4">Categoria</dt>
            <dd class="col-sm-8">@Model.Categoria?.Nome</dd>

            <dt class="col-sm-4">Descrição</dt>
            <dd class="col-sm-8">@Model.Descricao</dd>
        </dl>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />

            <button type="submit" class="btn btn-danger rounded-pill px-5 shadow-sm">
                <i class="bi bi-trash3-fill me-2"></i> Eliminar
            </button>

            <a asp-action="Index" class="btn btn-secondary rounded-pill px-4 shadow-sm ms-3">
                <i class="bi bi-x-circle me-2"></i> Cancelar
            </a>
        </form>
    </div>
</div>