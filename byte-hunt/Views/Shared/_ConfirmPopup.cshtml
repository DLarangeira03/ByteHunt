@model byte_hunt.Models.Popups.ConfirmPopupViewModel

<div class="modal fade" id="confirmModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Model.Titulo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>@Model.Pergunta</p>
            </div>
            <div class="modal-footer">
                <form method="@Model.FormMethod" action="@Model.ActionUrl">
                    <button type="submit" class="btn btn-danger">@Model.ConfirmBtnText</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Model.CancelBtnText</button>
                </form>
            </div>
        </div>
    </div>
</div>