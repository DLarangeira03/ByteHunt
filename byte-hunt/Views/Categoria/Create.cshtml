@model byte_hunt.Models.Categoria

@{
    ViewData["Title"] = "Nova Categoria";
    <link rel="stylesheet" href="~/css/categorias_crud.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
}

<div class="categoria-background-image"></div>

<div class="categoria-form-container-wide shadow rounded p-4 mx-auto">
    <h1 class="text-center mb-4">
        <i class="bi bi-folder-plus me-2"></i> Nova Categoria
    </h1>
    <p class="text-center mb-4">Preencha os campos abaixo para adicionar uma nova categoria.</p>

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly" class="validation-summary-errors mb-3"></div>

        <div class="mb-3">
            <label asp-for="Nome" class="form-label">Nome:*</label>
            <input asp-for="Nome" class="form-control rounded-pill shadow-sm" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Descricao" class="form-label">Descrição:</label>
            <textarea asp-for="Descricao" class="form-control rounded shadow-sm" rows="3"></textarea>
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>

        <div class="mb-3 text-muted">
            <p>*Campos obrigatórios</p>
        </div>

        <button type="submit" class="btn btn-dark rounded-pill px-5 shadow-sm mt-3">
            <i class="bi bi-check-lg me-2"></i> Criar
        </button>

        <a asp-action="Index" class="btn btn-secondary rounded-pill px-4 shadow-sm mt-3 ms-3">
            <i class="bi bi-x-circle me-2"></i> Cancelar
        </a>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}