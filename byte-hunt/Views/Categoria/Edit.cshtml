@model byte_hunt.Models.Categoria

@{
    ViewData["Title"] = "Editar Categoria";
    <link rel="stylesheet" href="~/css/categorias_crud.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}

<div class="categoria-background-image"></div>
<div class="categoria-form-container-wide">
    <h1 class="text-center mb-4">Editar Categoria</h1>
    <p class="text-center mb-4">Atualize os dados da categoria selecionada.</p>

    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />

        <div class="form-group mb-3">
            <label asp-for="Nome" class="form-label">Nome</label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Descricao" class="form-label">Descrição</label>
            <textarea asp-for="Descricao" class="form-control rounded shadow-sm" rows="3"></textarea>
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-dark rounded-pill px-5 shadow-sm mt-3">
            <i class="bi bi-check-lg me-2"></i> Guardar
        </button>

        <a asp-action="Index" class="btn btn-secondary rounded-pill px-4 shadow-sm mt-3 ms-3">
            <i class="bi bi-x-circle me-2"></i> Cancelar
        </a>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}