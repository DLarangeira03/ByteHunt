@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Confimação de Email";
}

<h1>@ViewData["Title"]</h1>
<h5>Insira seu email para reenviarmos a confirmação.</h5>
<hr />
<div class="d-flex justify-content-center mt-5">
    <div class="w-100" style="max-width: 420px;">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Reenviar</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
